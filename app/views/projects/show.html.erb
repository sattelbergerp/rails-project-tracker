<p><%= @project.description %></p>
<h3>Tasks</h3>
<ul class="list-group">
  <%= render @project.tasks %>
</ul>
<%= link_to "Delete", project_path(@project), method: 'delete', id: 'delete-project', class: 'btn btn-danger'%>
